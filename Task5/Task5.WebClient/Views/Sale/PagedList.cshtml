@model PagedList.IPagedList<Task5.WebClient.Models.Order.HomeOrderViewModel>

@using PagedList.Mvc

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-hover w-100 d-block d-md-table">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="btn-link">@Html.ActionLink(item.Client.Name.Substring(0, Math.Min(item.Client.Name.Length, 30)), "Details", "Sale", new { id = item.Id, page = 1 }, null)</td>
                    <td>@item.Client.Name</td>
                    <td>@item.DateTime</td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, x => Url.Action("Index", new { page = x }))
    </div>
}
else
{
    <h5>No records</h5>
}
