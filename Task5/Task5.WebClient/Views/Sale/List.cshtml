@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    onOrderDetails = function (Id) {
        $.get('@Url.Action("Details", "Order")', {id:Id }, function(data, textStatus, XHR)
        {
            $("#orderDetails").html(data);
            showOrderDetails();
        })
    }
</script>
